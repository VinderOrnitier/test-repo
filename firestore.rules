rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /transactions/{document=**} {
      allow read, write: if
          request.auth != null;
      allow read, delete: if
          request.auth.uid == resource.data.uid;
    }
    match /forms/{document=**} {
      allow read, write: if
          request.auth != null;
      allow read, delete: if
          request.auth.uid == resource.data.uid;
    }
    match /todos/{document=**} {
      allow create: if
          request.auth != null;
      allow read, delete: if
          request.auth.uid == resource.data.uid;
    }
    match /users/{document=**} {
      allow read, write: if
          request.auth != null;
      allow read, delete: if
          request.auth.uid == resource.data.uid;
    }
  }
}